<odoo>
	
	<record model="ir.ui.view" id="dtsc_machineprice_tree">
		<field name="name">dtsc.machineprice.tree</field>
		<field name="model">dtsc.machineprice</field>
		<field name="arch" type="xml">
			<tree editable="bottom">
				<field name="name"/>
				<field name="selected_attribute" options="{'no_create': True, 'no_create_edit': True}"/>
				<field name="selected_value" options="{'no_create': True, 'no_create_edit': True}"/>
				<field name="price"/>
				<field name="isdefault"/>
		  
			</tree>
		</field>
    </record>
	
	<record model="ir.ui.view" id="dtsc_machineprice_form">
      <field name="name">dtsc.machineprice.form</field>
      <field name="model">dtsc.machineprice</field>
      <field name="arch" type="xml">
		<form string="123">
		    <sheet>
				<div class="oe_title">
					<h1>客戶分類與價格設置</h1>
				</div>
				<group>
					<group>
						<field name="name"/>
						<field name="selected_attribute"/>
						<field name="selected_value"/>
						<field name="price"/>
						<field name="isdefault"/>
					</group>
				</group>
				
		  </sheet>
			<!-- <field name="name"/> -->
		  
		</form>
      </field>
    </record>
	
	
	

	
</odoo>