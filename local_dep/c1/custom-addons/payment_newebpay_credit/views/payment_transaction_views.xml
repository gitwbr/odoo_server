<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_transaction_form" model="ir.ui.view">
        <field name="name">NewebPay Transaction Form</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <field name="capture_manually" invisible="1"/>
                <button string="Authorize"
                        type="object"
                        name="action_newebpay_set_done"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', '|', ('provider_code', '!=', 'newebpay_credit'), ('capture_manually', '=', False), ('state', '!=', 'pending')]}"/>
                <button string="Confirm"
                        type="object"
                        name="action_newebpay_set_done"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', '|', ('provider_code', '!=', 'newebpay_credit'), ('capture_manually', '=', True), ('state', '!=', 'pending')]}"/>
                <button string="Cancel"
                        type="object"
                        name="action_newebpay_set_canceled"
                        attrs="{'invisible': ['|', ('provider_code', '!=', 'newebpay_credit'), ('state', '!=', 'pending')]}"/>
                <button string="Set to Error"
                        type="object"
                        name="action_newebpay_set_error"
                        attrs="{'invisible': ['|', ('provider_code', '!=', 'newebpay_credit'), ('state', '!=', 'pending')]}"/>
            </header>
        </field>
    </record>

</odoo>
